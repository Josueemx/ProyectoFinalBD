@model  Horario.Domain.Concrete.EFProfesorRepository

@{
    ViewBag.Title = "Profesores disponibles";
}

@foreach (var prof in Model.Profesores)
{
    <div>
        <h3>@prof.Nombre @prof.Apellido</h3>
        @prof.Nomina
        <br />
        @prof.Area
        <br />
        @Html.ActionLink("Ver horario", "Horario", new { Nomina = @prof.Nomina, DiaTexto = DateTime.Now.ToString("yyyy-MM-dd")})
    </div>
}

@if (TempData["message"] != null)
{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script type="text/javascript">
        alert(@TempData["message"]);
    </script>
}

